<html lang="en">
<%- include('../partials/header.ejs') %> <!--Includes the HEAD element from the partials file-->
<body>
<div id="AboutTeam">
  <h3 id="TeamHeading">Meet the team</h3>
  <div class="team-grid">
    <% teamMembers.forEach(member => { %>
      <div class="team-member">
        <div class="member-card">
          <img src="<%= member.image %>" alt="<%= member.name %>" class="member-photo">
          <div class="member-info">
            <h4 class="member-name"><%= member.name %></h4>
            <p class="member-role"><em><%= member.role %></em></p>
            
            <ul class="member-details">
              <% if (member.education) { %>
                <li><strong>Education:</strong> <%= member.education %></li>
              <% } %>
              
              <% if (member.responsibilities) { %>
                <li><strong>Responsibilities:</strong>
                  <ul>
                    <% member.responsibilities.forEach(responsibility => { %>
                      <li><%= responsibility %></li>
                    <% }); %>
                  </ul>
                </li>
              <% } %>
              
              <% if (member.bio) { %>
                <li><strong>Bio:</strong> <%= member.bio %></li>
              <% } %>
              
              <% if (member.email) { %>
                <li><strong>Contact:</strong> 
                  <a href="mailto:<%= member.email %>"><%= member.email %></a>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
  

    <footer>
        <%- include('../partials/footer.ejs') %> <!--Includes the Footer element from the partials file-->
    </footer>
</body>
</html>
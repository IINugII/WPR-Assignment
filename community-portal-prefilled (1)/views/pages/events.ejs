<html lang="en">
<%- include('../partials/header.ejs') %> <!--Includes the HEAD element from the partials file-->
<body>
    <nav>                                <!--The NAV on the home page is not included in the partials folder, as the home page nav looks different from the other pages-->
        <div class="title-cards">
            <div id="AboutCard">
                <div class="Menu">
                    <h2>About Us</h2>
                    <button type="button"><a href="/about">View About</a></button>
                </div>
            </div>

            <div id="EventsCard">
                <div class="Menu">
                    <h2>Events</h2>
                    <button type="button"><a href="/events">View Events</a></button>
                </div>
            </div>

            <div id="ContactCard">
                <div class="Menu">
                    <h2>Contact Us</h2>
                    <button type="button"><a href="/contact">Get into Contact</a></button>
                </div>
            </div>
        </div>
    </nav>
    <div id="EventsWrapper">
        <div id="AddNewEvent">
        <form method="POST" action="/events">
            <input type="text" name="title" id="NewEventName" placeholder="Event Name" required>
            <input type="date" name="date" id="NewEventDate" required>
            <textarea name="description" placeholder="Event Details" required></textarea>
            <input type="text" name="location" placeholder="Location" required>
            <input type="email" name="organizer" placeholder="Organizer Email" required>
            <button type="submit" id="submitEvent">Add Event</button>
        </form>
    </div>

        <div id="DisplayEvent">
            <% events.forEach(event => { %>
            <div id="Event1">
                <% if (event.image) { %>
                 <img src="<%= event.image %>" alt="<%= event.title %>" class="event-image">
                <% } %>
                 <h3><%= event.title %></h3>
                <div class="event-details">
                   <p class="event-date">üìÖ <%= new Date(event.date).toLocaleDateString() %></p>
                   <p class="event-location">üìç <%= event.location %></p>
                 <% if (event.description) { %>
                    <p class="event-description"><%= event.description %></p>
                     <% } %>
                </div>
            </div>
  <% }); %>
</div>
    <footer>
        <%- include('../partials/footer.ejs') %> <!--Includes the Footer element from the partials file-->
    </footer>
</body>
</html>

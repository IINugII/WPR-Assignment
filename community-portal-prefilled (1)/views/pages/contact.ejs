<html lang="en">
<%- include('../partials/header.ejs') %> <!--Includes the HEAD element from the partials file-->
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'><!--Insert an extra link to include icons used on the form-->
<body id="ContactBody">
  <nav>                                <!--The NAV on the home page is not included in the partials folder, as the home page nav looks different from the other pages-->
        <div class="title-cards">
            <div id="AboutCard">
                <div class="Menu">
                    <h2>About Us</h2>
                    <button type="button"><a href="/about">View About</a></button>
                </div>
            </div>

            <div id="EventsCard">
                <div class="Menu">
                    <h2>Events</h2>
                    <button type="button"><a href="/events">View Events</a></button>
                </div>
            </div>

            <div id="ContactCard">
                <div class="Menu">
                    <h2>Contact Us</h2>
                    <button type="button"><a href="/contact">Get into Contact</a></button>
                </div>
            </div>
        </div>
    </nav>
  <div class="wrapper">
    <!-- Fix form field names and structure -->
  <form method="POST" action="/contact">
    <h1>Contact us</h1>

    <div class="input-box">
      <div class="input-field">
        <input type="text" name="name" placeholder="Name" required>
        <i class='bx bxs-user'></i>
      </div>

      <div class="input-field">
        <input type="email" name="email" placeholder="Email" required>
        <i class='bx bxs-envelope'></i>
      </div>
    </div>

    <div class="input-field">
      <textarea name="message" placeholder="Your Message" required></textarea>
      <i class='bx bxs-message-detail'></i>
    </div>

    <label>
      <input type="checkbox" name="subscribe" value="true">
      I agree to receive updates
    </label>

    <button type="submit">Submit</button>
  </form>
  </div>

  <br>

  <footer>
    <%- include('../partials/footer.ejs') %> <!--Includes the Footer element from the partials file-->
</footer>
</body>
</html>
